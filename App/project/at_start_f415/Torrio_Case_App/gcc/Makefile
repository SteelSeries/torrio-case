-I$(BOARD_DIR) \
-I$(CMSIS_DEVICE_DIR) \
-I$(CMSIS_CORE_DIR) \
-I$(DRIVERS_DIR)/inc \
-I$(APP_DIR)/inc \
-I$(MIDDLE_WARWS_DIR)/i2c_application_library \
-I$(MIDDLE_WARWS_DIR)/usb_drivers/inc \
-I$(MIDDLE_WARWS_DIR)/usbd_class/custom_hid \

# compile gcc flags
ASFLAGS = $(MCU) $(AS_DEFS) $(AS_INCLUDES) $(OPT) -Wall -fdata-sections -ffunction-sections

CFLAGS += $(MCU) $(C_DEFS) $(C_INCLUDES) $(OPT) -Wall -fdata-sections -ffunction-sections

ifeq ($(DEBUG), 1)
CFLAGS += -g -gdwarf-2
CFLAGS += -DDEBUG
endif


# Generate dependency information
CFLAGS += -MMD -MP -MF"$(@:%.o=%.d)"


#######################################
# LDFLAGS
#######################################
# link script
LDSCRIPT = $(ROOT_DIR)/libraries/cmsis/cm4/device_support/startup/gcc/linker/AT32F415xB_FLASH.ld

# libraries
LIBS = -lc -lm -lnosys 
LIBDIR = 
LDFLAGS = $(MCU) -specs=nano.specs -T$(LDSCRIPT) $(LIBDIR) $(LIBS) -Wl,-Map=$(BUILD_DIR)/$(TARGET).map,--cref -Wl,--gc-sections

# default action: build all
# all: $(BUILD_DIR)/$(TARGET).elf $(BUILD_DIR)/$(TARGET).hex $(BUILD_DIR)/$(TARGET).bin postcopy pack


ifeq ($(DEBUG),1)
ALL_TARGETS = $(BUILD_DIR)/$(TARGET).elf \
              $(BUILD_DIR)/$(TARGET).hex \
              $(BUILD_DIR)/$(TARGET).bin \
              postcopy \
			  pack_debug
else
ALL_TARGETS = $(BUILD_DIR)/$(TARGET).elf \
              $(BUILD_DIR)/$(TARGET).hex \
              $(BUILD_DIR)/$(TARGET).bin \
			  postcopy \
              pack
endif

all: $(ALL_TARGETS)

#######################################
# build the application
#######################################
# list of objects
OBJECTS = $(addprefix $(BUILD_DIR)/,$(notdir $(C_SOURCES:.c=.o)))
vpath %.c $(sort $(dir $(C_SOURCES)))
# list of ASM program objects
OBJECTS += $(addprefix $(BUILD_DIR)/,$(notdir $(ASM_SOURCES:.s=.o)))
vpath %.s $(sort $(dir $(ASM_SOURCES)))
OBJECTS += $(addprefix $(BUILD_DIR)/,$(notdir $(ASMM_SOURCES:.S=.o)))
vpath %.S $(sort $(dir $(ASMM_SOURCES)))

$(BUILD_DIR)/%.o: %.c Makefile | $(BUILD_DIR) 
	$(CC) -c $(CFLAGS) -Wa,-a,-ad,-alms=$(BUILD_DIR)/$(notdir $(<:.c=.lst)) $< -o $@

$(BUILD_DIR)/%.o: %.s Makefile | $(BUILD_DIR)
	$(AS) -c $(CFLAGS) $< -o $@
$(BUILD_DIR)/%.o: %.S Makefile | $(BUILD_DIR)
	$(AS) -c $(CFLAGS) $< -o $@

$(BUILD_DIR)/$(TARGET).elf: $(OBJECTS) Makefile
	$(CC) $(OBJECTS) $(LDFLAGS) -o $@
	$(SZ) $@

$(BUILD_DIR)/%.hex: $(BUILD_DIR)/%.elf | $(BUILD_DIR)
	$(HEX) $< $@

$(BUILD_DIR)/%.bin: $(BUILD_DIR)/%.elf | $(BUILD_DIR)
	$(CP) -O binary --gap-fill 0xFF --pad-to $(FLASH_SIZE) $< $@
	
$(BUILD_DIR):
	mkdir $@		


# ---------------------------------------
# Copy .bin to Torrio_Case_App_Debug/
# ---------------------------------------

postcopy: $(BUILD_DIR)/$(TARGET).bin
	mkdir -p $(TARGET)
	cp $(BUILD_DIR)/$(TARGET).bin $(TARGET)/

pack:
	mkdir -p Torrio_Case_App
	cp $(BUILD_DIR)/Torrio_Case_App.bin Torrio_Case_App/
	@echo Running Windows batch script...
	MSYS2_ARG_CONV_EXCL='*' cmd.exe /c "_CRC32_Generate.bat"

pack_debug:
	mkdir -p $(TARGET)
	cp $(BUILD_DIR)/$(TARGET).bin $(TARGET)/
	@echo Running Windows batch script...
	MSYS2_ARG_CONV_EXCL='*' cmd.exe /c "_CRC32_Generate_Debug.bat"

